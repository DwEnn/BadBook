<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="hasMileage"
            type="java.lang.String"/>
        <variable
            name="paymentMoney"
            type="java.lang.String"/>
        <variable
            name="hasMoney"
            type="java.lang.String"/>
    </data>
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
            app:scale_base_width="200"
            app:scale_base_height="180"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="결제"
                app:scale_textsize="14"
                app:scale_width="50"
                app:scale_height="18"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/dp_age_img"
                app:scale_top="32"
                app:scale_width="12"
                app:scale_height="12"
                android:src="@mipmap/age_rate_19"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dp_movie_title_tv"
                android:text="인피니티워"
                app:scale_textsize="11"
                android:textStyle="bold"
                app:scale_top="30"
                app:scale_left="15"
                app:scale_width="170"
                app:scale_height="15"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dp_movie_date_tv"
                android:text="2018.06.07 목요일 - 21:55 ~ 24:13"
                app:scale_left="10"
                app:scale_textsize="9"
                app:scale_top="48"
                app:scale_width="180"
                app:scale_height="12"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dp_people_tv"
                android:text="성인 1"
                app:scale_left="10"
                app:scale_textsize="9"
                app:scale_top="58"
                app:scale_width="80"
                app:scale_height="12"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="결제 금액"
                app:scale_textsize="10"
                app:scale_top="78"
                app:scale_width="50"
                app:scale_height="13"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dp_money_tv"
                android:text="10,000 원"
                app:scale_textsize="10"
                app:scale_top="78"
                app:scale_left="70"
                android:layout_gravity="end"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                app:scale_width="100"
                app:scale_height="13"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:text="( 보유 금액"
                app:scale_textsize="10"
                app:scale_top="93"
                app:scale_width="70"
                app:scale_left="5"
                app:scale_height="13"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:singleLine="true"
                android:text='@{hasMoney+" )"}'
                app:scale_height="13"
                app:scale_textsize="10"
                app:scale_top="93"
                app:scale_width="100"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:text="마일리지 사용"
                app:scale_textsize="10"
                app:scale_top="108"
                app:scale_width="70"
                app:scale_height="13"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/dp_mileage_et"
                app:scale_textsize="10"
                android:hint="0"
                android:inputType="number"
                android:digits="0123456789"
                app:scale_top="108"
                app:scale_left="70"
                android:background="@android:color/transparent"
                android:layout_gravity="end"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                app:scale_width="100"
                app:scale_height="13"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:text="( 보유 마일리지"
                app:scale_textsize="10"
                app:scale_top="123"
                app:scale_width="70"
                app:scale_left="5"
                app:scale_height="13"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:singleLine="true"
                android:text='@{hasMileage+" )"}'
                app:scale_height="13"
                app:scale_textsize="10"
                app:scale_top="123"
                app:scale_width="100"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:text="최종 결제 금액"
                app:scale_textsize="12"
                app:scale_top="148"
                app:scale_width="83"
                app:scale_height="17"
                android:textColor="@android:color/holo_red_dark"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                app:scale_textsize="12"
                android:text="@{paymentMoney}"
                app:scale_top="148"
                app:scale_left="70"
                android:background="@android:color/transparent"
                android:layout_gravity="end"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                app:scale_width="100"
                app:scale_height="17"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/dp_payment_layout"
            app:scale_base_width="200"
            app:scale_base_height="30"
            android:background="@drawable/payment_able_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:scale_width="200"
                app:scale_height="30"
                app:scale_textsize="12"
                android:text="결제 하기"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>

</layout>